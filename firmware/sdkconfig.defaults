#
# Espressif IoT Development Framework Configuration
#

#
# Arduino Configuration
#

#
# Debug Log Configuration
#
CONFIG_ARDUHAL_LOG_DEFAULT_LEVEL_DEBUG=y
CONFIG_ARDUHAL_LOG_COLORS=y

#
# Serial flasher config
#
CONFIG_ESPTOOLPY_BAUD_2MB=y
CONFIG_FLASHMODE_QIO=y
CONFIG_ESPTOOLPY_FLASHFREQ_80M=y
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y
CONFIG_MONITOR_BAUD_2MB=y

#
# Compiler options
#
CONFIG_CXX_EXCEPTIONS=y

#
# Component config
#

#
# Bluetooth
#
CONFIG_BT_ENABLED=y

#
# MODEM SLEEP Options
#
CONFIG_BTC_TASK_STACK_SIZE=8192

#
# ESP32-specific
#
CONFIG_ESP32_DEFAULT_CPU_FREQ_240=y
CONFIG_CONSOLE_UART_BAUDRATE=2000000

#
# Power Management
#
CONFIG_PM_ENABLE=y

#
# FAT Filesystem support
#
CONFIG_FATFS_LFN_HEAP=y

#
# FreeRTOS
#
CONFIG_FREERTOS_HZ=1000
CONFIG_FREERTOS_ASSERT_FAIL_PRINT_CONTINUE=y
